                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "office365": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', variables('nameConnectionOffice365'))]",
                                "connectionName": "[variables('nameConnectionOffice365')]",
                                "id": "[concat(subscription().id, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/', variables('nameConnectionOffice365'))]"
                            },
