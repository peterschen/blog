                    "actions": {
                        "If_severity_is_high_post_message_in_Team,_else_send_email_notification": {
                            "actions": {
                                "Post_message_to_Teams_security_channel": {
                                    "runAfter": {},
                                    "type": "ApiConnection",
                                    "inputs": {
                                        "body": {
                                            "rootMessage": {
                                                "body": {
                                                    "content": "Security Alert (@{triggerBody()?['AlertSeverity']}): @{triggerBody()?['DisplayName']}\n\nDescription:\n@{triggerBody()?['Description']}",
                                                    "contentType": 1
                                                }
                                            }
                                        },
                                        "host": {
                                            "connection": {
                                                "name": "@parameters('$connections')['teams']['connectionId']"
                                            }
                                        },
                                        "method": "post",
                                        "path": "/beta/groups/@{encodeURIComponent('ff7edbf6-1d7e-4f31-9944-eb28302d9e05')}/channels/@{encodeURIComponent('5b59a475-ab14-4190-9ca3-c5d69c53052a')}/chatThreads"
                                    }
                                },
                                "Send_an_email_with_high_importance": {
                                    "runAfter": {
                                        "Post_message_to_Teams_security_channel": [
                                            "Succeeded"
                                        ]
                                    },
                                    "type": "ApiConnection",
                                    "inputs": {
                                        "body": {
                                            "Body": "@triggerBody()?['Description']",
                                            "Importance": "High",
                                            "Subject": "Security Alert (@{triggerBody()?['AlertSeverity']}): @{triggerBody()?['DisplayName']}",
                                            "To": "[parameters('MailAddress')]"
                                        },
                                        "host": {
                                            "connection": {
                                                "name": "@parameters('$connections')['office365']['connectionId']"
                                            }
                                        },
                                        "method": "post",
                                        "path": "/Mail"
                                    }
                                }
                            },
                            "runAfter": {},
                            "else": {
                                "actions": {
                                    "Send_an_email_with_low_priority": {
                                        "runAfter": {},
                                        "type": "ApiConnection",
                                        "inputs": {
                                            "body": {
                                                "Body": "@triggerBody()?['Description']",
                                                "Subject": "Security Alert (@{triggerBody()?['AlertSeverity']}): @{triggerBody()?['DisplayName']}",
                                                "To": "this.is.my.email@address.com"
                                            },
                                            "host": {
                                                "connection": {
                                                    "name": "@parameters('$connections')['office365']['connectionId']"
                                                }
                                            },
                                            "method": "post",
                                            "path": "/Mail"
                                        }
                                    }
                                }
                            },
                            "expression": "@equals(triggerBody()?['AlertSeverity'], 'High')",
                            "type": "If"
                        }
                    },
