<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PassDemo.Ui</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PassDemo.Ui.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/date-fns@4.1.0/cdn.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.5.1/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0/dist/chartjs-adapter-date-fns.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">PassDemo.Ui</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li> -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Weather/Index">Weather</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PassDemo.Ui - This application has been created with <a href="https://cloud.google.com/gemini-enterprise">Gemini Enterprise</a>!
        </div>
        <div class="container" id="db-status-container">
            <span id="db-status-text">Status: Loading...</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const statusContainer = document.getElementById('db-status-container');
            const statusTextElement = document.getElementById('db-status-text');

            if (!statusContainer || !statusTextElement) {
                console.error("Status polling elements not found.");
                return;
            }

            const statusEndpoint = '/api/status';

            const updateStatus = async () => {
                try {
                    const response = await fetch(statusEndpoint);

                    if (!response.ok) {
                        statusTextElement.textContent = `Error: API returned status ${response.status}`;
                        statusTextElement.className = 'text-danger';
                        return;
                    }

                    const data = await response.json();

                    // Update the text content directly from the JSON response.
                    statusTextElement.textContent = `Connection: ${data.databaseState} | Server: ${data.databaseServer}`;

                    // Update the condition to check for the new enum string "Connected".
                    if (data.databaseState.toLowerCase() === 'connected') {
                        statusTextElement.className = 'text-success';
                    } else {
                        statusTextElement.className = 'text-warning';
                    }

                } catch (error) {
                    statusTextElement.textContent = 'Error: API is unreachable.';
                    statusTextElement.className = 'text-danger';
                }
            };

            setInterval(updateStatus, 500);
            updateStatus();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
