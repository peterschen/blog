<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PassDemo.Ui</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PassDemo.Ui.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/date-fns@4.1.0/cdn.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.5.1/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns@3.0.0/dist/chartjs-adapter-date-fns.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">PassDemo.Ui</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Weather Dashboard</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Addresses/Index">Addresses</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center">
                        <label for="connectionSelector" class="form-label me-2 mb-0">Active Demo:</label>
                        <select id="connectionSelector" class="form-select form-select-sm" style="width: auto;">
                            <option value="DEMO1">Act 1: The MVP</option>
                            <option value="DEMO2">Act 2: Production Ready</option>
                            <option value="DEMO3">Act 3: Disaster Recovery</option>
                            <option value="DEMO4">Act 4: Going Viral</option>
                        </select>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                This application has been created with <a href="https://cloud.google.com/gemini-enterprise">Gemini Enterprise</a>!
            </div>
            <div id="db-status-container">
                <span id="db-status-text">Status: Loading...</span>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const statusTextElement = document.getElementById('db-status-text');
            const connectionSelector = document.getElementById('connectionSelector');

            async function updateStatus() {
                const selectedEnv = connectionSelector.value;
                try {
                    const response = await fetch(`/api/status/${selectedEnv}`);
                    if (!response.ok) throw new Error(`Status check failed: ${response.status}`);
                    const data = await response.json();
                    statusTextElement.textContent = `Connection: ${data.databaseState} | Server: ${data.databaseServer}`;
                    statusTextElement.className = data.databaseState.toLowerCase() === 'connected' ? 'text-success' : 'text-warning';
                } catch (error) {
                    statusTextElement.textContent = 'Error: API is unreachable.';
                    statusTextElement.className = 'text-danger';
                }
            }
            connectionSelector.addEventListener('change', updateStatus);
            setInterval(updateStatus, 5000);
            updateStatus();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
