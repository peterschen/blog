@page "{id:int}"
@model PassDemo.Ui.Pages.Addresses.EditModel
@{
    ViewData["Title"] = "Edit Address";
}

<h1>Edit Address</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @* This hidden input is crucial to ensure the Address.Id is sent back to the OnPostAsync method *@
            <input type="hidden" asp-for="Address.Id" />

            <div class="form-group mb-3">
                <label asp-for="Address.Name" class="control-label"></label>
                <input asp-for="Address.Name" class="form-control" />
                <span asp-validation-for="Address.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address.Surname" class="control-label"></label>
                <input asp-for="Address.Surname" class="form-control" />
                <span asp-validation-for="Address.Surname" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address.Street" class="control-label"></label>
                <input asp-for="Address.Street" class="form-control" />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address.City" class="control-label"></label>
                <input asp-for="Address.City" class="form-control" />
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address.State" class="control-label"></label>
                <input asp-for="Address.State" class="form-control" />
                <span asp-validation-for="Address.State" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address.ZipCode" class="control-label"></label>
                <input asp-for="Address.ZipCode" class="form-control" />
                <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-page="/Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
