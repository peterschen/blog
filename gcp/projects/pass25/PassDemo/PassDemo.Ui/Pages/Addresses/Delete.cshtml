@page "{id:int}"
@model PassDemo.Ui.Pages.Addresses.DeleteModel
@{
    ViewData["Title"] = "Delete Address";
}

<h1>Delete Confirmation</h1>

<h3 class="text-danger">Are you sure you want to delete this address?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Address.Name</dd>

        <dt class="col-sm-2">Surname</dt>
        <dd class="col-sm-10">@Model.Address.Surname</dd>

        <dt class="col-sm-2">Street</dt>
        <dd class="col-sm-10">@Model.Address.Street</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.Address.City</dd>

        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.Address.State</dd>

        <dt class="col-sm-2">Zip Code</dt>
        <dd class="col-sm-10">@Model.Address.ZipCode</dd>
    </dl>
    
    <form method="post">
        @* The hidden input ensures the Id is available to OnPostAsync *@
        <input type="hidden" asp-for="Address.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
